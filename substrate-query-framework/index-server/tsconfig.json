{
	"compilerOptions": {
		"declaration": true,
		"importHelpers": true,
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"target": "es2017",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"sourceMap": true,
    "inlineSources": false,
    "types": [ "node", "express" ],
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
